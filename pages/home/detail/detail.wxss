page{
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
}

.detail-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.detail-container .detail-content{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.header{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  padding: 20rpx 0rpx;
  align-items: center;
}

.h-image{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.h-image image{
  width: 100%;
  height: 300rpx;
}

.h-txt{
  width: 90%;
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
}

.h-name{
  font-size: 35rpx;
}

.h-desc{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 27rpx;
  padding: 10rpx 0rpx;
  color: #FF4400;
}

.h-spor{
  width: 100%;
  font-size: 27rpx;
  color: gray;
}

.join-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  background: white;
  align-items: center;
  justify-content: center;
  height: 130rpx;
}

.join-btn{
  background: #FF4400;
  font-size: 30rpx;
  padding: 20rpx 50rpx;
  color: white;
  border-radius: 40rpx;
}

.gift-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  margin-top: 10rpx;
  align-items: center;
  padding-bottom: 50rpx;
}

.join-detail{
  width: 90%;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  align-items: center;
  justify-content: space-around;
  padding: 25rpx 0rpx;
}

.gift-title{
  width: 90%;
  display: flex;
  flex-direction: column;
  padding: 15rpx 0rpx;
  font-size: 30rpx;
  color: gray;
}

.gift-desc{
  width: 90%;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  color: gray;
  padding-bottom: 15rpx;
}

.gift-desc-item{
  padding-bottom: 15rpx;
}

.gift-image{
  width: 90%;
  display: flex;
  flex-direction: column;
  padding-bottom: 15rpx;
}

.gift-image image{
  width: 100%;
  margin-bottom: 15rpx;
  border-radius: 5rpx;
}

.fixd-right{
  width: 150rpx;
  position: fixed;
  right: 0rpx;
  bottom: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 40rpx;
  padding: 20rpx 0rpx;
  margin-bottom: 30rpx;
}

.fixd-right-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: white;
  margin-bottom: 40rpx;
}

.fixd-right image{
  width: 100rpx;
  height: 100rpx;
}