page{
  background-color: white;
  display: flex;
  flex-direction: column;
}

.container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.container-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 200rpx;
}

.content-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 150rpx;
  justify-content: center;
  padding: 20rpx 0rpx;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #EEE9E9;

}

.item-left{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.item-left image{
  width: 150rpx;
  height: 100%;
  border-radius: 15rpx;
}

.item-right image{
  width: 70rpx;
  height: 70rpx;
  z-index: 100;
  position: fixed;
  right: 20rpx;
}

.item-right{
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
}

.title{
  font-size: 35rpx;

}

.tip{
  font-size: 30rpx;
  color: gray;
}
