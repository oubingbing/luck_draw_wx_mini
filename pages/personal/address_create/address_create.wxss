page{
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
}

.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
}

.container-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.content{
  width: 90%;
  display: flex;
  flex-direction: column;
}

.content-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 30rpx 0rpx;
  font-size: 30rpx;
}

.color-picker{
  color: gray;
}

.content-item .label{
  width: 25%;
}

.content-item .input{
  width: 75%;
}

.add-address{
  width: 100%;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  position: fixed;
  z-index: 100;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.add-address-content{
  background: #FF4400;
  width: 60%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 17rpx 0rpx;
  border-radius: 40rpx;
  color: white;
}

.add-address image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.add-image-view{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tip{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 50rpx;
}

.tip-content{
  width: 90%;
  font-size: 27rpx;
  color: darkgray;
}