<view class="container">
  <view class="container-content">
    <view class="content">
      <view class="username content-item">
        <view class="label">收货人</view>
        <input class="input" type="text" bindblur="bingnane" placeholder="请填写收货人姓名"></input>
      </view>
      <view class="username content-item">
        <view class="label">手机号码</view>
        <input class="input" type="text" placeholder="请填写收货人手机号码"></input>
      </view>
      <view class="username content-item">
        <view class="label">所在地区</view>
        <picker classs="input" bindchange="bindRegionChange" mode="region">
          <view class="color-picker">
            {{address.province}}{{address.city}}{{address.district}}
          </view>
        </picker>
      </view>
      <view class="username content-item">
        <view class="label">详细地址</view>
        <textarea class="input" value="{{address.detailAddress}}" bindblur="bindTextAreaBlur" placeholder="街道、楼牌号等" />
      </view>
      <view class="username content-item">
        <view class="label">默认地址</view>
        <switch color="#FF4400" checked="{{address.useType}}" bindchange="switch1Change"/>
      </view>
    </view>


    <view class="add-address">
      <view class="add-address-content" bindtap="submit">
        <view>保存</view>
      </view>
    </view>

  </view>
</view>